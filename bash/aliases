GrepFind() {
    echo "grep -lir '$1' $\(find . -name '*.$2'\)"
    echo "###"
    if [ $# -eq 2 ] ; then
        foundFiles=$(find . -name \*.$2)
        # echo "foundFiles: "$foundFiles
        grep -lir $1 $foundFiles
    fi
}
alias gf=GrepFind


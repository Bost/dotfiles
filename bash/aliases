    METADA_CORE=.metadata/.plugins/org.eclipse.jdt.core
    Run rm -rf .metadata/.plugins/org.eclipse.core.resources/.history
    Run rm $METADA_CORE/*.index $METADA_CORE/savedIndexNames.txt
}

# get ip addresses for every interface
getip() {
    /sbin/ifconfig | \
    grep -B1 "inet addr" | \
    awk '{ if ( $1 == "inet" ) { print $2 } else if ( $2 == "Link" ) { printf "%s:" ,$1 } }' | \
    awk -F: '{ print $1 ": " $3 }';
}


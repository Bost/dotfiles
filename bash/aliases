GitUpdateAll() {
    _cd=$(pwd)
    echo 'pwd: '$_cd

    Run cd $dev/cheatsheet
    RunGit git pull --rebase origin && RunGit git fetch --tags

    Run cd $dev/dotfiles
    RunGit git pull --rebase origin && RunGit git fetch --tags

    if [ "$isCygwin_155" -gt 0 ]; then
        # TODO sync from $dev/cheatsheet, $dev/dotfiles instead of github
        Run cd /cygdrive/h/dev/cheatsheet
        RunGit git pull --rebase origin && RunGit git fetch --tags

        Run cd /cygdrive/h/dev/dotfiles
        RunGit git pull --rebase origin && RunGit git fetch --tags
    fi
    cd $_cd
}
alias  ga='GitUpdateAll'
alias gua='GitUpdateAll'

GitPushRepo() {
    echo 'cd '$1' && git push'
          cd  $1  && git push
}

GitPushAll() {
    _cd=$(pwd)
    echo 'pwd: '$_cd
    GitPushRepo $dev/cheatsheet && GitPushRepo $dev/dotfiles
    cd $_cd
}
alias gha='GitPushAll'

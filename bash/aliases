if [ $isLinuxNew64 -gt 0 ] || [ $isLinuxVB -gt 0 ] || [ $isLinuxMartinJV -gt 0 ]; then
    # with '/' at the end
    LaunchEmacs() {
        Run pgrep --exact emacs
        # 0: means One or more processes matched the criteria.
        if [ $? == 0 ]; then
            RunBg $dev/emacs/lib-src/emacsclient $@
        else
            RunBg $dev/emacs/src/emacs $@
        fi
    }
else
    LaunchEmacs() {
        Run pgrep --exact emacs
        # 0: means One or more processes matched the criteria.
        if [ $? == 0 ]; then
            RunBg emacsclient $@
        else
            RunBg emacs $@
        fi
    }
fi
alias emacs=LaunchEmacs


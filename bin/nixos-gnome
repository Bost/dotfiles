#!/bin/sh
# Download verification:
# echo "039226ca44e15506d97a68a315a97334ab300c90abb03b4c4621544994ab975b  latest-nixos-gnome-x86_64-linux.iso" | shasum -a 256 --check

file=latest-nixos-gnome-x86_64-linux.iso

run-qemu \
     --iso-file=$HOME/virt-machines/$file \
     --qcow2-file=$HOME/virt-machines/$file.qcow2 \
     $@
